---
import HalfLogo from './half-logo.astro';
import ContactForm from './react/contact-form';
import ContactGate from './react/contact-gate';
---

<section id="contact-us" class="section-container">
  <div
    class="absolute left-0 top-0 z-20 h-3 w-3 -translate-x-1/2 -translate-y-1/2 rounded-full bg-gradient-to-b from-white to-[#ECECEC] p-[2px] sm:h-7 sm:w-7"
    style="box-shadow: 0px 0px 0.468888px 0.468888px rgba(0, 0, 0, 0.07), 0px 0px 0.468888px 1.40666px rgba(0, 0, 0, 0.05), 0px 5.62666px 6.09555px -2.81333px rgba(0, 0, 0, 0.25), 0px 1.87555px 7.50221px 1.87555px rgba(0, 0, 0, 0.12);"
  >
    <div class="h-full w-full rounded-full bg-gradient-to-b from-[#F4F4F4] to-[#FEFEFE]"></div>
  </div>
  <div
    class="absolute right-0 top-0 z-20 m-0 h-3 w-3 -translate-y-1/2 translate-x-1/2 rounded-full bg-gradient-to-b from-white to-[#ECECEC] p-[2px] sm:h-7 sm:w-7"
    style="box-shadow: 0px 0px 0.468888px 0.468888px rgba(0, 0, 0, 0.07), 0px 0px 0.468888px 1.40666px rgba(0, 0, 0, 0.05), 0px 5.62666px 6.09555px -2.81333px rgba(0, 0, 0, 0.25), 0px 1.87555px 7.50221px 1.87555px rgba(0, 0, 0, 0.12);"
  >
    <div class="h-full w-full rounded-full bg-gradient-to-b from-[#F4F4F4] to-[#FEFEFE]"></div>
  </div>
  <div class="absolute top-1/2 hidden w-40 -translate-y-1/2 md:block lg:w-auto">
    <HalfLogo />
  </div>
  <div class="absolute right-0 top-1/2 hidden w-40 -translate-y-1/2 rotate-180 md:block lg:w-auto">
    <HalfLogo />
  </div>
  <div class="invisible">
    <ContactGate position="top" />
  </div>
  <div class="mb-5 space-y-1 px-4">
    <h2 class="text-center text-3xl font-semibold">Contact Us</h2>
    <p class="text-center text-[#919191]">We usually respond before 24 hours.</p>
  </div>
  <ContactForm client:load />
  <div class="invisible">
    <ContactGate position="bottom" />
  </div>
</section>
