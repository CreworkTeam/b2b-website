---
import { Image } from 'astro:assets';
import { formatDate } from 'date-fns';

const {
  data: { blogTitle, blogDate, blogImage },
  reading_time,
} = Astro.props;
---

<header class="space-y-4">
  <div class="space-y-4">
    <h1 class="font-semibold">{blogTitle}</h1>
    <p class="text-sm text-[#686868]">
      {blogDate ? formatDate(blogDate, 'MMMM dd, yyyy') : null} â€¢ {reading_time}
    </p>
  </div>
  {
    (
      <Image
        src={blogImage?.src || '/opengraph.png'}
        alt={blogImage?.alt || 'Blog Image'}
        width="1200"
        height="600"
        format="avif"
        quality={80}
        class="object-cover object-center border rounded-lg aspect-video"
      />
    )
  }
</header>
