---
const portfolio = [
  {
    name: 'Feel Good Club',
    description:
      'A skincare brand dedicated to offering top-quality physical products for optimal skin and hair care for women.',
    coverImage: '/portfolio/feel-good-club.png',
    techStack: ['NextJS', 'MongoDB', 'NodeJS'],
  },
  {
    name: 'Crework LMS',
    description:
      'A user-friendly LMS designed to access resources, track progress and submit assignments all in one dashboard.',
    coverImage: '/portfolio/lms.png',
    techStack: ['NextJS', 'MongoDB', 'ExpressJS'],
  },
  {
    name: 'Reflectly',
    description:
      'An easy to use tool for product owners to get feedback and features suggestions from their users.',
    coverImage: '/portfolio/reflectly.png',
    techStack: ['NextJS', 'NodeJS'],
  },
  {
    name: 'Startup Navigator',
    description: 'A wep app that lets you find the perfect accelerator/incubator for your startup.',
    coverImage: '/portfolio/startup-navigator.png',
    techStack: ['NextJS', 'GenAI'],
  },
];
---

<section
  id="our-portfolio"
  class="relative border border-[#F1F1F1] pb-5 pt-16 md:py-16"
  data-section="portfolio"
>
  <div
    class="absolute left-0 top-0 h-3 w-3 -translate-x-1/2 -translate-y-1/2 rounded-full bg-gradient-to-b from-white to-[#ECECEC] p-[2px] sm:h-7 sm:w-7"
    style="box-shadow: 0px 0px 0.468888px 0.468888px rgba(0, 0, 0, 0.07), 0px 0px 0.468888px 1.40666px rgba(0, 0, 0, 0.05), 0px 5.62666px 6.09555px -2.81333px rgba(0, 0, 0, 0.25), 0px 1.87555px 7.50221px 1.87555px rgba(0, 0, 0, 0.12);"
  >
    <div class="h-full w-full rounded-full bg-gradient-to-b from-[#F4F4F4] to-[#FEFEFE]"></div>
  </div>
  <div
    class="absolute right-0 top-0 m-0 h-3 w-3 -translate-y-1/2 translate-x-1/2 rounded-full bg-gradient-to-b from-white to-[#ECECEC] p-[2px] sm:h-7 sm:w-7"
    style="box-shadow: 0px 0px 0.468888px 0.468888px rgba(0, 0, 0, 0.07), 0px 0px 0.468888px 1.40666px rgba(0, 0, 0, 0.05), 0px 5.62666px 6.09555px -2.81333px rgba(0, 0, 0, 0.25), 0px 1.87555px 7.50221px 1.87555px rgba(0, 0, 0, 0.12);"
  >
    <div class="h-full w-full rounded-full bg-gradient-to-b from-[#F4F4F4] to-[#FEFEFE]"></div>
  </div>
  <div class="mb-[72px] space-y-1">
    <h2 class="text-center text-3xl font-semibold">Our Portfolio</h2>
    <p class="mb-8 text-center text-[#919191]">We bring your ideas to life</p>
  </div>
  <div class="m-auto grid w-fit grid-cols-1 gap-8 px-5 sm:grid-cols-2 md:gap-8 lg:gap-16">
    {
      portfolio.map((project) => (
        <div
          class="w-full rounded-lg bg-gradient-to-b from-[#FFFFFF] to-[#ECECEC] p-[1px] md:max-w-96"
          style="box-shadow: 0px 0px 1.54186px 1.54186px rgba(0, 0, 0, 0.07);"
        >
          <div class="h-full w-full rounded-[7px] bg-gradient-to-b from-[#F4F4F4] to-[#FEFEFE] p-2">
            <div class="h-full rounded-sm border border-dashed border-[#E4E4E4]">
              <div class="space-y-3 p-2">
                <img
                  src={project.coverImage}
                  alt={project.name}
                  class="w-full rounded-sm border border-[#F1F1F1]"
                  style="filter: drop-shadow(0px 0px 0.579437px rgba(77, 77, 77, 0.25));"
                />
                <div>
                  <div class="mb-1 flex flex-wrap gap-1">
                    {project.techStack.map((tech) => (
                      <span class="rounded-full border border-[#555353] bg-[#F9F9F9] px-2 text-xs text-[#464646]">
                        {tech}
                      </span>
                    ))}
                  </div>
                  <h3 class="font-medium">{project.name}</h3>
                  <p class="text-xs text-[#64748B]">{project.description}</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</section>
