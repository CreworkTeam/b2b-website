---
import { Image } from 'astro:assets';

const portfolio = [
  {
    image: '/portfolio/butterflies.png',
    name: 'Butterflies',
  },
  {
    image: '/portfolio/fundsfinder.png',
    name: 'Funds Finder',
  },
  {
    image: '/portfolio/feelgoodclub.png',
    name: 'Feel Good Club',
  },
  {
    image: '/portfolio/dashboard.png',
    name: 'Dashboard',
  },
  {
    image: '/portfolio/startupnavigator.png',
    name: 'Startup Navigator',
  },
  {
    image: '/portfolio/travaygroup.png',
    name: 'Travay Group',
  },
  {
    image: '/portfolio/PM.png',
    name: 'Product Management Cohort',
  },
];
---

<section
  id="our-portfolio"
  class="md:[16/8] mx-auto flex aspect-video w-11/12 items-center border sm:w-10/12 lg:w-9/12"
  data-section="portfolio"
>
  <div class="absolute left-0 flex w-screen overflow-hidden">
    <div class="animate-marquee whitespace-nowrap">
      {
        portfolio.map(({ image, name }) => (
          <div class="mr-6 inline-flex aspect-[16/10] w-[70vw] rounded-2xl border shadow-[0px_0px_6px_0px_#00000040] md:w-[calc(50vw)]">
            <Image
              src={image}
              alt={name}
              class="size-full rounded-2xl object-cover object-top"
              width={800}
              height={450}
            />
          </div>
        ))
      }
    </div>
    <div class="animate-marquee2 absolute top-0 whitespace-nowrap">
      {
        portfolio.map(({ image, name }) => (
          <div class="mr-6 inline-flex aspect-[16/10] w-[70vw] rounded-2xl border shadow-[0px_0px_6px_0px_#00000040] md:w-[calc(50vw)]">
            <Image
              src={image}
              alt={name}
              class="size-full rounded-2xl object-cover object-top"
              width={800}
              height={450}
            />
          </div>
        ))
      }
    </div>
  </div>
</section>
