---
<Section id="team" data-section="meet-the-team">
  <div class="w-full max-w-6xl mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-5xl font-bold text-[#464646] mb-6">Meet the Team</h2>
    </div>

    <div class="relative">
      <div id="team-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 transition-[height] duration-300 ease-in-out overflow-hidden" style="height: 800px;">
        {teamMembers.map((member) => (
          <div class="team-member bg-[#fcfbfb] rounded-2xl px-4 py-8  shadow-md border-grey-200 border hover:shadow-lg transition-shadow">
            <div class="mb-4">
              <div class="flex justify-between items-center">
                <h3 class="font-medium text-xl text-gray-900">{member.name}</h3>
                <img 
                  src={member.companyLogo} 
                  alt={member.company}
                  class="h-10 border shadow-md rounded-xl w-auto object-contain"
                />
              </div>
            </div>
            
            <div class="flex justify-center mb-4">
              <div class="w-36 h-36 rounded-full overflow-hidden bg-gray-50">
                <img
                  src={member.img}
                  alt={member.name}
                  class="w-full h-full object-cover bg-custom-radial"
                />
              </div>
            </div>
            
            <div class="flex justify-between items-center">
              <div class="flex flex-col ">
                <p class="text-[#525252] text-md ">{member.role}</p>
                <p class="text-[#525252] text-lg mt-0.5">{member.company}</p>
              </div>
              <a 
                href={member.linkedin}
                target="_blank"
                rel="noopener noreferrer"
                class="flex-shrink-0"
              >
                <img
                  src="/icons/linkedin.png"
                  alt="LinkedIn"
                  class="w-8 h-8 rounded-full opacity-80 hover:opacity-100 transition-opacity bg-slate-600 hover:bg-blue-500 "
                />
              </a>
            </div>
          </div>
        ))}
      </div>

      <div id="gradient-overlay" class="absolute bottom-0 left-0 right-0 h-32 bg-gradient-to-t from-white to-transparent"></div>
    </div>

    <div class="text-center mt-8">
      <button id="toggleButton" class="btn bg-primary text-white px-5 py-2 rounded-xl hover:bg-primary/90 transition-colors">
        More
      </button>
    </div>
  </div>
</Section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const teamGrid = document.getElementById('team-grid');
    const toggleButton = document.getElementById('toggleButton');
    const gradientOverlay = document.getElementById('gradient-overlay');
    
    let isExpanded = false;

    toggleButton?.addEventListener('click', () => {
      isExpanded = !isExpanded;
      
      if (teamGrid) {
        teamGrid.style.height = isExpanded ? `${teamGrid.scrollHeight}px` : '800px';
      }
      if (gradientOverlay) {
        gradientOverlay.style.opacity = isExpanded ? '0' : '1';
      }
      if (toggleButton) {
        toggleButton.textContent = isExpanded ? 'Show Less' : 'More';
        gradientOverlay.style.display = isExpanded ? 'none' : 'block';
      }
    });
  });
</script>

<style>
  #gradient-overlay {
    transition: opacity 0.3s ease-in-out;
  }
</style>