---
import Header from '../components/header.astro';
import Footer from '../components/footer.astro';
import '../styles/global.css';
import TalkToUs from '../components/talk-to-us.astro';
import { BOOK_CALL } from '@/constants.ts';
const { title, description, canonical, mptag } = Astro.props;
---

<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical} />
    <title>
      {title}
    </title>

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/opengraph.png" />
    <meta property="og:url" content={canonical} />
    <meta property="og:type" content="website" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="/opengraph.png" />
  </head>
  <body>
    <Header />
    <main class="relative">
      <section
        class="relative -z-10 mx-auto h-12 w-10/12 max-w-5xl border-x border-[#F1F1F1] sm:px-16 lg:w-9/12"
      >
      </section>
      <section class="section-container relative space-y-12 border-b-0" data-case-study={mptag}>
        <div
          class="absolute left-0 top-0 z-20 h-3 w-3 -translate-x-1/2 -translate-y-1/2 rounded-full bg-gradient-to-b from-white to-[#ECECEC] p-[2px] sm:h-7 sm:w-7"
          style="box-shadow: 0px 0px 0.468888px 0.468888px rgba(0, 0, 0, 0.07), 0px 0px 0.468888px 1.40666px rgba(0, 0, 0, 0.05), 0px 5.62666px 6.09555px -2.81333px rgba(0, 0, 0, 0.25), 0px 1.87555px 7.50221px 1.87555px rgba(0, 0, 0, 0.12);"
        >
          <div class="h-full w-full rounded-full bg-gradient-to-b from-[#F4F4F4] to-[#FEFEFE]">
          </div>
        </div>
        <div
          class="absolute right-0 top-0 z-20 !m-0 h-3 w-3 -translate-y-1/2 translate-x-1/2 rounded-full bg-gradient-to-b from-white to-[#ECECEC] p-[2px] sm:h-7 sm:w-7"
          style="box-shadow: 0px 0px 0.468888px 0.468888px rgba(0, 0, 0, 0.07), 0px 0px 0.468888px 1.40666px rgba(0, 0, 0, 0.05), 0px 5.62666px 6.09555px -2.81333px rgba(0, 0, 0, 0.25), 0px 1.87555px 7.50221px 1.87555px rgba(0, 0, 0, 0.12);"
        >
          <div class="h-full w-full rounded-full bg-gradient-to-b from-[#F4F4F4] to-[#FEFEFE]">
          </div>
        </div>
        <slot name="hero" />
        <div class="relative flex flex-col-reverse gap-8 md:flex-row">
          <div class="space-y-10 md:w-8/12">
            <slot name="content" />
          </div>
          <div
            data-btntype="book call - table of content"
            class="top-5 h-fit space-y-4 md:sticky md:w-4/12"
          >
            <h4 class="text-black">Table of Content</h4>
            <slot name="table-of-content" />
            <h4 class="text-xl text-black">Have a project?</h4>
            <a href={BOOK_CALL} target="_blank" class="btn block w-fit text-balance text-center"
              ><span class="text-sm">Book a free discovery call</span></a
            >
          </div>
        </div>
        <div class="space-y-6">
          <h2 class="font-bold">Read some more of our amazing projects</h2>
          <div class="flex flex-col gap-4 md:flex-row md:gap-16">
            <slot name="case-studies" />
          </div>
        </div>
        <a href="/case-studies" class="btn mx-auto block w-fit md:px-16">View All Case Studies</a>
      </section>
      <TalkToUs />
    </main>
    <Footer />
  </body><script>
    import { setupButtonTracking } from '../utils/mixpanel';
    setupButtonTracking({
      pageName: 'CaseStudyPage',
    });
  </script>
</html>
