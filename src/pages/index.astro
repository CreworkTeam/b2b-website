---
import '@fontsource/instrument-serif';
import '@fontsource-variable/inter';

import Header from '../components/header.astro';
import Hero from '../components/hero.astro';
import OurImpact from '../components/impact.astro';
import OurPortfolio from '../components/portfolio.astro';
import Footer from '../components/footer.astro';
---

<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Crework Labs</title>
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body>
    <Header />
    <main class="mx-auto max-w-7xl px-8 md:px-16 xl:px-32">
      <section class="relative -z-10 h-28 border-x border-[#F1F1F1]"></section>
      <Hero />
      <OurImpact />
      <OurPortfolio />
    </main>
    <Footer />
  </body>
</html>
