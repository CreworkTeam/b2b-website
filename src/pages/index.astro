---
import '@fontsource/instrument-serif';
import '@fontsource-variable/inter';

import Header from '../components/header.astro';
import Hero from '../components/hero.astro';
import OurImpact from '../components/impact.astro';
import OurPortfolio from '../components/portfolio.astro';
import Footer from '../components/footer.astro';
---

<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="We are a product studio deeply focused on crafting experiences that connect you with your audience."
    />
    <link rel="canonical" href="https://www.creworklabs.com" />
    <title>Crework Labs</title>
    <link rel="stylesheet" href="/styles/global.css" />

    <meta property="og:title" content="Crework Labs" />
    <meta
      property="og:description"
      content="We are a product studio deeply focused on crafting experiences that connect you with your audience."
    />
    <meta property="og:image" content="/opengraph.png" />
    <meta property="og:url" content="https://www.creworklabs.com" />
    <meta property="og:type" content="website" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Crework Labs" />
    <meta
      name="twitter:description"
      content="We are a product studio deeply focused on crafting experiences that connect you with your audience."
    />
    <meta name="twitter:image" content="/opengraph.png" />
  </head>
  <body>
    <Header />
    <main class="mx-auto max-w-7xl px-8 md:px-16 xl:px-32">
      <section class="relative -z-10 h-28 border-x border-[#F1F1F1]"></section>
      <Hero />
      <OurImpact />
      <OurPortfolio />
    </main>
    <Footer />
  </body>
  <script>
    import { setupButtonTracking } from '../utils/mixpanel';
    setupButtonTracking();
  </script>
</html>
