---
import MainLayout from '../../layouts/main-layout.astro';
import Section from '../../components/section.astro';
import FeaturedCarousel from '@/components/blog/features-carousel';
import SubscribeEmail from '@/components/blog/subscribe-email';
import BlogList from '@/components/blog/blog-list';
import { getCollection } from 'astro:content';
import { BLOG_CATEGORIES_MAP } from '@/constants';

export const prerender = true;

export async function getStaticPaths() {
  const categoriesMap = BLOG_CATEGORIES_MAP;

  return categoriesMap.map((cat) => {
    return {
      params: { category: cat.tag },
      props: { category: cat.tag, categoryName: cat.name },
    };
  });
}

const { category, categoryName } = Astro.props;

const allBlogs = await getCollection('blogs', ({ data }) => {
  return data.draft !== true;
});

const featuredBlogs = allBlogs
  .map(({ slug, data: { ...rest } }) => ({ slug, ...rest }))
  .filter((blog) => blog.featured && (blog.mainCategory === categoryName || (blog.blogCategories || []).includes(categoryName)))
  .sort((a, b) => new Date(b.blogDate).getTime() - new Date(a.blogDate).getTime());

const title = `${categoryName} Blogs`;
const description =
  'AI shortcuts, Growth Tactics and Business Breakdowns that makes Founders Build Smarter in 5 minutes.';
---

<MainLayout
  title={`${title} - Crework Labs`}
  description={description}
  canonical={`https://www.creworklabs.com/category/${category}`}
>
  <Section>
        <h2 class="text-2xl font-semibold sm:text-3xl md:text-4xl mb-2">
          Subscribe to our newsletter - Idea To Impact
        </h2>
    <div class="flex flex-col justify-between gap-8 md:flex-row md:items-end">
      <div class="flex-[3] space-y-4 text-center md:space-y-2 md:text-start">
        <p class="text-sm font-normal text-[#686868] md:text-lg">
          {description}
        </p>
      </div>
      <div class="flex flex-[2] flex-col items-center justify-end gap-1 md:items-end">
        <SubscribeEmail client:load />
      </div>
    </div>
  </Section>
  <Section className="py-8">
    {featuredBlogs.length > 0 && (
      <div class="space-y-3">
        <div data-featured-blog="true">
          <FeaturedCarousel blogs={featuredBlogs} client:load />
        </div>
      </div>
    )}
    <BlogList category={category} client:only="react" />
  </Section>
  <script>
    import { setupButtonTracking } from '@/utils/mixpanel';

    setupButtonTracking({
      pageName: 'Category',
    });
  </script>
</MainLayout>
