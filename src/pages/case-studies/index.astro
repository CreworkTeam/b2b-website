---
import MainLayout from '../../layouts/main-layout.astro';
import TalkToUs from '../../components/talk-to-us.astro';
import CaseStudiesSwitch from '@/components/home/case-studies/case-studies-switch';
---

<MainLayout
  title="Case Studies"
  description="We are a product studio deeply focused on crafting experiences that connect you with your audience."
  canonical="https://www.creworklabs.com/case-studies"
>
  <section class="section-container border-b-0" data-section="case-studies">
    <div
      class="absolute left-0 top-0 h-3 w-3 -translate-x-1/2 -translate-y-1/2 rounded-full bg-gradient-to-b from-white to-[#ECECEC] p-[2px] sm:h-7 sm:w-7"
      style="box-shadow: 0px 0px 0.468888px 0.468888px rgba(0, 0, 0, 0.07), 0px 0px 0.468888px 1.40666px rgba(0, 0, 0, 0.05), 0px 5.62666px 6.09555px -2.81333px rgba(0, 0, 0, 0.25), 0px 1.87555px 7.50221px 1.87555px rgba(0, 0, 0, 0.12);"
    >
      <div class="h-full w-full rounded-full bg-gradient-to-b from-[#F4F4F4] to-[#FEFEFE]"></div>
    </div>
    <div
      class="absolute right-0 top-0 m-0 h-3 w-3 -translate-y-1/2 translate-x-1/2 rounded-full bg-gradient-to-b from-white to-[#ECECEC] p-[2px] sm:h-7 sm:w-7"
      style="box-shadow: 0px 0px 0.468888px 0.468888px rgba(0, 0, 0, 0.07), 0px 0px 0.468888px 1.40666px rgba(0, 0, 0, 0.05), 0px 5.62666px 6.09555px -2.81333px rgba(0, 0, 0, 0.25), 0px 1.87555px 7.50221px 1.87555px rgba(0, 0, 0, 0.12);"
    >
      <div class="h-full w-full rounded-full bg-gradient-to-b from-[#F4F4F4] to-[#FEFEFE]"></div>
    </div>
    <div class="mx-auto mb-[72px] max-w-3xl space-y-4 text-center">
      <h1 class="text-3xl font-semibold">Case Studies: Transforming Ideas into Impact</h1>
      <p>Discover the creative process that drives our success.</p>
    </div>
    <CaseStudiesSwitch sticky={false} client:load />
  </section>
  <TalkToUs />
  <script>
    import { setupButtonTracking } from '../../utils/mixpanel';
    setupButtonTracking({
      pageName: 'CaseStudies',
    });
  </script>
</MainLayout>
